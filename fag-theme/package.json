{
  "devDependencies": {
    "nodemon": "^3.0.1",
    "tailwindcss": "^3.3.3",
    "@babel/core": "^7.22.20",
    "@babel/cli": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "init-tailwind": "tailwindcss init",
    "compile-tailwindfag": "nodemon --exec 'tailwindcss -i assets/css/style.css -o dist/style.css' --watch 'assets/css/style.css' --watch './**/*.php'",
    "compile-fagtheme-js": "babel assets/js --out-dir dist --watch",
    "watch-fagtheme": "npm-run-all -p compile-tailwindfag compile-fagtheme-js",
    "stop-watch-fagtheme": "pkill -f 'nodemon --exec tailwindcss -i assets/css/style.css -o dist/style.css' && pkill -f 'babel assets/js --out-dir dist'"
  }
}

